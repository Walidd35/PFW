---
import data from '../data/projects.json';
const { projects } = data;
---

<section id="projets" class="projects section">
  <div class="container">
    <h2>Mes Projets</h2>
    
    <div class="projects-grid">
      {projects.map((project) => (
        <div class="project-card card">
          <div class="project-image">
            <div class="image-placeholder">
              ðŸš€
            </div>
          </div>
          
          <div class="project-content">
            <h3>{project.title}</h3>
            <p class="project-description">{project.description}</p>
            
            <div class="technologies">
              {project.technologies.map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
            
            <div class="project-links">
              <a href={project.github} target="_blank" rel="noopener noreferrer" class="btn btn-small">
                ðŸ“¦ Code
              </a>
              {project.demo && (
                <a href={project.demo} target="_blank" rel="noopener noreferrer" class="btn btn-small btn-demo">
                  ðŸš€ Demo
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .projects {
    background: #f7fafc;
    min-height: 100vh;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .project-card {
    overflow: hidden;
    height: fit-content;
  }
  
  .project-image {
    width: 100%;
    height: 200px;
    background: linear-gradient(45deg, #667eea, #764ba2);
    border-radius: 10px;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .image-placeholder {
    font-size: 4rem;
    filter: brightness(1.2);
  }
  
  .project-content {
    padding: 0 0.5rem;
  }
  
  .project-description {
    color: #4a5568;
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .tech-tag {
    background: linear-gradient(45deg, #667eea, #764ba2);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }
  
  .project-links {
    display: flex;
    gap: 1rem;
  }
  
  .btn-small {
    padding: 8px 16px;
    font-size: 0.9rem;
  }
  
  .btn-demo {
    background: linear-gradient(45deg, #48bb78, #38a169);
  }
  
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
    
    .project-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>